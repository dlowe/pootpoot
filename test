#!/usr/bin/env bash

export POOTPOOT_APP_DIR=`mktemp -d -t /tmp`
export POOTPOOT_APP_DOMAIN=localhost
export POOTPOOT_APP_PORT=7021
export -n POOTPOOT_ANALYTICS_KEY
export -n POOTPOOT_BITLY_KEY
export -n POOTPOOT_BITLY_LOGIN

./mkapp poot-poot $POOTPOOT_APP_DIR
~/google_appengine/dev_appserver.py --clear_datastore --require_indexes --port=$POOTPOOT_APP_PORT $POOTPOOT_APP_DIR >/dev/null 2>&1 &

sleep 1

export PYTHONPATH="$POOTPOOT_APP_DIR:/Users/dlowe/google_appengine/:$PYTHONPATH"
nosetests -q --with-gae --gae-lib-root=/Users/dlowe/google_appengine/ --gae-application=$POOTPOOT_APP_DIR -w tests $@
retval=$?

rm -f tests/*.pyc
rm -rf $POOTPOOT_APP_DIR

kill `ps -ef | grep $POOTPOOT_APP_PORT | grep -v grep | awk '{print $2}'`

exit $retval
