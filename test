#!/usr/bin/env bash

export POOTPOOT_APP_DIR=`mktemp -d -t /tmp`
./mkapp poot-poot $POOTPOOT_APP_DIR

export -n POOTPOOT_ANALYTICS_KEY

export PYTHONPATH="$POOTPOOT_APP_DIR:/Users/dlowe/google_appengine/:$PYTHONPATH"
/opt/local/Library/Frameworks/Python.framework/Versions/2.5/bin/nosetests -q --with-gae --gae-lib-root=/Users/dlowe/google_appengine/ --gae-application=$POOTPOOT_APP_DIR -w tests $@
retval=$?

rm -f tests/*.pyc
rm -rf $POOTPOOT_APP_DIR

exit $retval
