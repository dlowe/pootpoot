#!/usr/bin/env python

## system
from datetime import datetime

## app engine
from google.appengine.ext import db
from google.appengine.ext import webapp
from google.appengine.api import images
from google.appengine.ext.webapp.util import run_wsgi_app

## this app
from pypoot import interpretation

class Kick(webapp.RequestHandler):
    def get(self):
        all = interpretation.Interpretation.all().fetch(1000)
        for i in all:
            if (i.type == 'image'):
                image = images.Image(i.content)
                i.image_height = image.height
                i.image_width  = image.width
                self.response.out.write(i.title + ': ' + str(i.image_height) + ', ' + str(i.image_width))
                i.put()

APPLICATION = webapp.WSGIApplication([('/_kick', Kick)], debug=True)

def main():
    run_wsgi_app(APPLICATION)

if __name__ == "__main__":
    main()
